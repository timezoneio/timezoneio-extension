{
  "manifest_version": 2,

  "name": "Timezone.io",
  "description": "Quickly find what time it is where your coworkers are",
  "version": "0.1",
  "author": "Dan Farrelly",

  "background": {
    "scripts": ["js/background-bundle.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icons/19.png",
      "38": "images/icons/38.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://timezone.io/*",
    "location",
    "tabs",
    "storage",
    "notifications"
  ],

  "icons": {
    "16": "images/icons/16.png",
    "32": "images/icons/32.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png",
    "256": "images/icons/256.png"
  }
}
